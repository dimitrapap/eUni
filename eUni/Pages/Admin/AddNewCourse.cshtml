@page
@model eUni.Pages.Admin.AddNewCourseModel
@{
}

<div class="row">
	<div class="col-lg-8 mx-auto">
		<div class="card">
			<div class="card-body">
				<h2 class="text-center mb-5">@Localizer["AddNewCourse"]</h2>

				@if (Model.errorMessage.Length > 0)
				{
					<div class='alert alert-warning alert-dismissible fade show' role='alert'>
						<strong>@Model.errorMessage</strong>
						<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
					</div>
				}
				else if (Model.successMessage.Length > 0)
				{
					<div class='alert alert-success alert-dismissible fade show' role='alert'>
						<strong>@Model.successMessage</strong>
						<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
					</div>
				}

				<form method="post">
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["Title"]</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="Title">
							<span asp-validation-for="Title" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["Teacher"]</label>
						<div class="col-sm-8">
							<select class="form-select" asp-for="TeachersId">
								@foreach(var item in Model.TeachersInfoList)
								{
									<option value='@item.TeachersId'>@item.Name @item.LastName </option>
								}
							</select>
							<span asp-validation-for="TeachersId" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["Semester"]</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="Semester">
							<span asp-validation-for="Semester" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["Base"]</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="Base">
							<span asp-validation-for="Base" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["CodeCourse"]</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="CodeCourse">
							<span asp-validation-for="CodeCourse" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["CourseType"]</label>
						<div class="col-sm-8">
							<select class="form-select" asp-for="CourseType">
								<option value='Υποχρεωτικό'>@Localizer["Υποχρεωτικό"]</option>
								<option value='Επιλογής'>@Localizer["Επιλογής"]</option>
								<option value='Κατεύθυνσης'>@Localizer["Κατεύθυνσης"]</option>
							</select>
							<span asp-validation-for="CourseType" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">@Localizer["Department"]</label>
						<div class="col-sm-8">
							<select class="form-select" asp-for="Department">
								<option value='Τμήμα Πληροφορικής'>Τμήμα Πληροφορικής</option>
								<option value='Τμήμα Οικονομικής Επιστήμης'>Τμήμα Οικονομικής Επιστήμης</option>
								<option value='Τμήμα Βιολογίας'>Τμήμα Βιολογίας</option>
								<option value='Τμήμα Μαθηματικών'>Τμήμα Μαθηματικών</option>
								<option value='Τμήμα Διοίκησης Επιχειρήσεων'>Τμήμα Διοίκησης Επιχειρήσεων</option>
							</select>
							<span asp-validation-for="Department" class="text-danger"></span>
						</div>
					</div>

					<div id="student1">
						<div class="row mb-3">
							<label class="col-sm-4 col-form-label">@Localizer["CourseDetails"]</label>
							<div class="col-sm-8">
								<textarea class="form-control" asp-for="CourseDetails"></textarea>
								<span asp-validation-for="CourseDetails" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div id="teacher">
						<div class="row mb-3">
							<label class="col-sm-4 col-form-label">@Localizer["Credits"]</label>
							<div class="col-sm-8">
								<input class="form-control" asp-for="Credits">
								<span asp-validation-for="Credits" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row mb-3">
						<div class="offset-sm-4 col-sm-4 d-grid">
							<button type="submit" class="btn btn-primary">@Localizer["AddNeCourseBtn"]</button>
						</div>
						<div class="col-sm-4 d-grid">
							<a class="btn btn-outline-primary" href="/" role="button">@Localizer["Cancel"]</a>
						</div>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>
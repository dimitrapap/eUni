<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eUni</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eUni.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">eUni</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("role") == null)
                        {
                            
                        }
                        else if (Context.Session.GetString("role").Equals("Grammateia"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Announcements">@Localizer["Announcements"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Notifications">@Localizer["Notifications"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Students">@Localizer["Students"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Teachers">@Localizer["Teachers"]</a>
                            </li>
                        }
                        else if (Context.Session.GetString("role").Equals("Kathigitis"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Announcements">@Localizer["AdminAnnouncements"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Teacher/Courses">@Localizer["Courses"]</a>
                            </li>
                        }
                        else if (Context.Session.GetString("role").Equals("Mathitis"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Announcements">@Localizer["AdminAnnouncements"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Teacher/Courses">@Localizer["Courses"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Student/AddCourses">@Localizer["AddCourses"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Student/Grades">@Localizer["Grades"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Student/Requests">@Localizer["Requests"]</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @if(Thread.CurrentThread.CurrentUICulture.Name == "el")
                                {
                                    <img src="/images/GreekFlagIcon.png" width="25">
                                }
                                else
                                {
                                    <img src="/images/EnglandFlagIcon.png" width="25">
                                }
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/Lang?culture=en"><img src="/images/EnglandFlagIcon.png" width="25"></a></li>
                                <li><a class="dropdown-item" href="/Lang?culture=el"><img src="/images/GreekFlagIcon.png" width="25"></a></li>
                                @* <li><a class="dropdown-item" href="/Lang?culture=en">En</a></li>
                                <li><a class="dropdown-item" href="/Lang?culture=el">Gr</a></li> *@
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("role") == null)
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="" asp-page="/Login">@Localizer["Login"]</a>
                            </li>
                        }
                        else if (Context.Session.GetString("role").Equals("Grammateia"))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Index">@Localizer["Home"]</a></li>
                                    <li><a class="dropdown-item" asp-page="/Admin/Register">@Localizer["Register"]</a></li>
                                    <li><a class="dropdown-item" asp-page="/Admin/AddNewCourse">@Localizer["AddNewCourse"]</a></li>
                                    <li><a class="dropdown-item" asp-page="/Privacy">Privacy</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">@Localizer["Logout"]</a></li>
                                </ul>
                            </li>
                        }
                        else if (Context.Session.GetString("role").Equals("Mathitis"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Context.Session.GetString("firstname")
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Student/StudentsInformation">@Localizer["Home"]</a></li>
                                    <li><a class="dropdown-item" asp-page="/Privacy">Privacy</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">@Localizer["Logout"]</a></li>
                                </ul>
                            </li>
                        }
                        else if (Context.Session.GetString("role").Equals("Kathigitis"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Context.Session.GetString("firstname")
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Teacher/TeachersInformation">@Localizer["Home"]</a></li>
                                    <li><a class="dropdown-item" asp-page="/Privacy">Privacy</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">@Localizer["Logout"]</a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - eUni - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>